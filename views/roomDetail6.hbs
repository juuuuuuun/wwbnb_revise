<body>
    <div class="overlay">
        {{> sign_login}}
    </div>
    <header>
        {{> header}}
    </header>
    <main>
        <section class="listing">
            <h1 class="title">Modern House</h1>
            <div class="detail_content">
                <div class="gallery">
                    <div class="main images"
                        style="background-image: url('https://images.unsplash.com/photo-1523217582562-09d0def993a6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80')">
                    </div>
                    <div class="sub images"
                        style="background-image: url('https://images.unsplash.com/photo-1521483756775-c37af386fce9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80')">
                    </div>
                    <div class="sub images"
                        style="background-image: url('https://images.unsplash.com/photo-1528754704377-60e053a66165?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80')">
                    </div>
                </div>
                <div class="content">
                    <div class="rateInfo">
                        <div class="review">
                            <i class="fas fa-star"></i><span>4.34</span><span>(12)</span>
                            <p>location</p>
                            <div class="currency">$220CAD/peron & night</div>
                        </div>
                        <div class="desc">
                            <hr>
                            <div class="headTitle">Modern House</div>
                            <div class="detail">A place to relax in winter in front of the fireplace with a beautiful
                                view of the Otonabee River. In summer enjoy a swim, paddle boat, or kayak on the river.
                                Enjoy supper prepared using the fully equipped kitchen or the gas barbeque on the deck
                                just outside your entrance.</div>
                            <hr>
                            <div class="amenity">Amenities</div>
                            <div class="detail">
                                <i class="fas fa-fire"></i>
                                Indoor fireplace
                                <br>
                                <i class="fas fa-tshirt"></i>
                                Hangers
                                <br>
                                <i class="fas fa-play"></i>
                                Pack â€™n Play/travel crib
                                <br>
                                <i class="fas fa-parking"></i>
                                Free parking on premises
                                <br>
                                <i class="fas fa-wifi"></i>
                                Wifi
                            </div>
                        </div>
                    </div>
                    <div class="booking">
                        <form class="user-form">
                            <!-- action="/aboutUs" method="get"-->
                            <div class="head">
                                <p>Book Now</p>
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <hr>
                            <div class="input checkIn">
                                <p>Check-In</p>
                                <input required type="datetime-local" id="date-in" />
                            </div>
                            <div class="input checkOut">
                                <p>Check-Out</p>
                                <input required type="datetime-local" id="date-out" />
                            </div>
                            <div class="input checkOut">
                                <p>Number of Guests</p>
                                <input type="number" id="quantity" name="quantity" value="0">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="input">
                                <div class="head">
                                    <p>Total</p>
                                </div>
                                <p>$CAD</p>
                            </div>
                            <div class="reserve">
                                <input type="submit" id="reserve" value="Reserve Now" />
                            </div>
                            <div class="reset">
                                <input type="reset" id="reset" value="Reset" />
                            </div>
                            <br />
                        </form>
                    </div>
                </div>

        </section>
    </main>
    <hr class="line">
    </hr>
    <footer>
    </footer>
</body>

</html>